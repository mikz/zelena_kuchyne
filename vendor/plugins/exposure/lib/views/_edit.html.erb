<% content_for :submit_button do %>
  <input type="submit" value="<%= locales[:save] %>" />
  <%= link_to_remote locales[:close], :url => {:action => 'show', :id => @record, :format => :js} %>
<% end %>
<td colspan="<%= @options[:columns].length + 2 %>">
  <h3><%= format (@options[:title][:proc].is_a?(Proc))? @options[:title][:proc].call(@record) : @record.send(@options[:title][:name]) %></h3>
  <%= render :partial => 'form', :locals => {:url => {:action => 'update', :id => @record}} %>
</td>