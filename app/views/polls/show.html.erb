<h1><%= format( (@options[:title][:proc])? @options[:title][:proc].call(@record) : @record.send(@options[:title][:name]) ,@options[:title][:options]) %></h1>
<div class="poll">
  <dl>
    <dt><%= @record.question.mb_chars.capitalize%></dt>
    <%- @record.poll_answers_results.each do |answer|-%>
    <dd><%= answer.text %><div class="votes">(<%= "#{answer.votes.to_i} #{t(:votes)}"  %>)</div><div class="result"><div style="width: <%= format answer.percent.to_i%>%;"><span><%= format answer.percent.to_f, :precision => 0%>%</span></div></div></dd>
    <%-end-%>
  </dl>
  <p><%= t(:overall).mb_chars.capitalize%>: <%= "#{@record.poll_answers_results.first.total_votes.to_i} #{t(:votes)}"%></p>
</div>