<div class="meal">  <div class="meal_flags"><%= meal_flags(meal)%></div>  <div class="img"><%- if meal.image_flag-%><img src="/pictures/item_<%=meal.item_id%>.th.jpg" alt="<%= meal.name%>"/><%-end-%></div>  <div class="meal_text"><h3><%= meal.name.chars.capitalize %><span class="soldout"><%= locales[:sold_out] if sold_out%></span></h3>  <%= meal.description %></div>  <% form_tag :controller => 'basket', :action => 'add_item' do %>    <p class="price"><%= locales[:price] %>: <strong><%= format_currency(meal.discount_price :date=>@date) %></strong></p>    <fieldset>      <input type="hidden" name="item[item_id]" value="<%= meal.item_id %>" />      <input type="hidden" name="item[deliver_on]" value="<%= @date %>" />      <p><label for="item_<%= meal.item_id %>_amount"><%= locales[:portions]%>:</label>      <input class="amount_input" <%='disabled="disabled"' if sold_out || @delivery[:disabled]%> type="text" name="item[amount]" id="item_<%= meal.item_id %>_amount" /></p>      <p><input type="image" src="/images/form_add_to_basket<%= "_gray" if sold_out || @delivery[:disabled]%>.gif" <%= 'disabled="disabled"' if sold_out || @delivery[:disabled]%> value="<%= locales[:to_basket]%>" /></p>    </fieldset>  <% end %>  <%= like_meal(meal) if meal.category && meal.category.facebook? %>  <div class="clear">&nbsp;</div></div>