<?xml version="1.0" encoding="UTF-8"?>
<SHOP>
<%- @products.each do |product| -%>
  <SHOPITEM>
    <PRODUCT><%=h product.name[0..63]%></PRODUCT>
    <DESCRIPTION><%= h strip_tags((product.description && product.description.length <= 512)? product.description : product.short_description).strip[0..511]%></DESCRIPTION>
    <URL><%= seo_url(product)%></URL>
    <%unless product.term_of_delivery.nil?-%><AVAILABILITY><%=product.term_of_delivery/(60*60)%></AVAILABILITY><%-end%>
    <%if product.image_flag-%><IMGURL><%= url_for :controller => :pictures, :action => "item_#{product.item_id}.jpg", :only_path => false%></IMGURL><%-end%>
    <PRICE_VAT><%=product.price%></PRICE_VAT>
  </SHOPITEM>
<%-end-%>
</SHOP>  