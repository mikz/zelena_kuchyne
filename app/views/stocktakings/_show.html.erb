<td><%= link_to format( (@options[:title][:proc])? @options[:title][:proc].call(record) : record.send(@options[:title][:name]) ,@options[:title][:options]), :action => 'show', :id => record %></td>
<% for column in @options[:columns] %>
<% val = record.send(column[:name]) %>
  <td><%= format((column[:proc].is_a?(Proc))? column[:proc].call(val) : val,column[:options]) %></td>
<% end %>
<td>
  <%= smart_link locales[:show], :action => 'edit', :id => record %>
</td>