<td><%= link_to record.send(@options[:title][:name]), :action => 'show', :id => record %></td>
<% for column in @options[:columns] %>
  <td><%= format(record.send(column[:name])) %></td>
<% end %>
<td>
  <%= smart_link(locales[:edit], {:action => 'edit', :id => record}, :html => {:onclick => "if(!check_opened(event)) {return false;}"}) %>
  | <%= smart_link locales[:delete], {:action => 'destroy', :id => record}, :confirm => locales['delete_confirmation'] %>
</td>