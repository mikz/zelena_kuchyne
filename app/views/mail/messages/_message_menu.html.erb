<ul class="message-menu">
  <% unless params[:controller] == 'mail/messages' && params[:action] == 'show' -%>
    <li><%= smart_link t(:close), :controller => '/mail/messages', :action => 'show', :id => message.id %></li>
    <% if message.conversation.flag_closed -%>
      <li>
        <em><%= t(:conversation_closed) %></em>
      </li>
    <% else -%>  
      <% if can_reply_to(message) && message.direction == 'recieved' -%>
        <li><%= smart_link t(:reply), :controller => '/mail/messages', :action => 'reply', :id => message.id  %></li>
        <% if message.flag_new -%>
        <li><%= smart_link t(:mark_read), :controller => '/mail/messages', :action => 'toggle_read', :id => message.id %></li>
        <% else -%>
        <li><%= smart_link t(:mark_unread), :controller => '/mail/messages', :action => 'toggle_read', :id => message.id %></li>  
        <% end -%>
      <% end -%>
    <% end -%>
  <% end -%>
</ul>