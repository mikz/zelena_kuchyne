<table class="admin" id="ingredients_log">
  <thead>
    <% unless (pagination = will_paginate(@records,:container=>false,:params=>{:date=>params[:date]})).nil? %>
    <tr class="pagination">
      <td colspan="5"><%= pagination %></td>
    </tr>
    <% end %>
    <tr>
      <td><%= link_to t("ingredient"), :action => 'balance', :order => "i.name ASC" %></td>
      <td><%= link_to t("amount"), :action => 'balance', :order => "amount" %></td>
    </tr>
  </thead>
  <tbody id="records_body">
  <% for record in @records %>
    <tr>
      <td><%= record[:ingredient_name] %></td>
      <td><%= format record[:amount] %> <%= record[:ingredient_unit]%></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% if protect_against_forgery? %> 
<div style='display: none;' id="authenticity_token"><%= form_authenticity_token %></div> 
<% end %>
<script type="text/javascript">
$(function(){
  $("tr.pagination a").regenerateLinks();
});
</script>